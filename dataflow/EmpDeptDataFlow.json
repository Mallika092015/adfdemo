{
	"name": "EmpDeptDataFlow",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "empDataset",
						"type": "DatasetReference"
					},
					"name": "EmployeeDataset"
				},
				{
					"dataset": {
						"referenceName": "deptDataset",
						"type": "DatasetReference"
					},
					"name": "DepartmentDataset"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "EmpDeptOutputDataset",
						"type": "DatasetReference"
					},
					"name": "EmpDeptDataset"
				}
			],
			"transformations": [
				{
					"name": "joinEmpDeptDataset"
				},
				{
					"name": "ModifyColumns1",
					"description": "Autogenerated by data preview actions"
				},
				{
					"name": "select1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Emptid as string,",
				"          { name} as string,",
				"          { country} as string,",
				"          { department} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> EmployeeDataset",
				"source(output(",
				"          deptid as string,",
				"          { deptname} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> DepartmentDataset",
				"select1, ModifyColumns1 join(Emptid == deptid,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     partitionBy('hash', 1),",
				"     broadcast: 'auto')~> joinEmpDeptDataset",
				"DepartmentDataset derive({ deptname} = upper({ deptname})) ~> ModifyColumns1",
				"EmployeeDataset select(mapColumn(",
				"          Emptid,",
				"          { name},",
				"          { country},",
				"          { department}",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"joinEmpDeptDataset sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['outputDataset'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> EmpDeptDataset"
			]
		}
	}
}